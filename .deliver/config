APP="phx_hello"

BUILD_HOST="jump-staging"
BUILD_USER="jump-staging"
BUILD_AT="/home/jump-staging/app_build"

PRODUCTION_HOSTS="phx_hello"
PRODUCTION_USER="ubuntu"
DELIVER_TO="/home/ubuntu/app_release"

AUTO_VERSION=commit-count+git-revision

pre_erlang_get_and_update_deps() {
  # local _prod_secret_path="/home/jump-staging/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      # fail if any command fails (recommended)
      set -e

      # ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'

      cd '$BUILD_AT'
      # required by the phx.digest task
      mkdir -p priv/static
      mix deps.get
      cd '$BUILD_AT/assets'
      npm install
      $BUILD_AT/assets/node_modules/.bin/brunch build --production
      cd '$BUILD_AT'
      APP='$APP' MIX_ENV='$TARGET_MIX_ENV' $MIX_CMD phx.digest $SILENCE
    "
  fi
}
